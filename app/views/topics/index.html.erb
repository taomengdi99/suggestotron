<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.sort_by {|topic| -topic.votes.count}.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td>
          <% if topic.votes.count == 0 %>
          <%= '0 vote' %>
          <% else %>
          <%= pluralize(topic.votes.count, 'vote') %>
          <% end %>
        </td>

        <td><%= button_to '+1', upvote_topic_path(topic), method: :post %></td>
        <td><%= button_to '-1', dropvote_topic_path(topic), method: :put %></td>
        <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

